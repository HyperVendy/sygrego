<% title "Add a voucher" %>

<h1><%= yield(:title) %></h1>

<%= simple_form_for(@participant, url: add_voucher_mysyg_participant_path(group: @group.mysyg_setting.mysyg_name, id: @participant.id), method: :post) do |f| %> 
	<%= f.error_notification %>

	<%= f.input :voucher_name, label: "Voucher" %>

    <br/>

	<%= f.button :submit, "Add" %>
<% end %>	

<br/>

<%= link_to "Back", edit_mysyg_participant_path(group: @group.mysyg_setting.mysyg_name, id: @participant.id),
                  class: primary_button_class,
                  role: "button" %>
