<% title "Extra Costs for your Group" %>

<h1><%= yield(:title) %></h1>

<% if @participant_extras.empty? %>
	<p>Your group does not have any custom / extra costs</p>

<% else %>

	<%= form_tag update_multiple_mysyg_participant_extras_path(group: @group.mysyg_setting.mysyg_name), method: :patch do  %>
        <table class="table table-dark table-striped">
            <thead>
			    <tr>
			       <th>&nbsp;</th>
		           <th>Item</th>
		           <th>Size</th>
		           <th>Cost</th>
		           <th align="left">Comment</th>
			    </tr>
            </thead>

            <%= render @participant_extras %>
        </table>
	
		<%= submit_tag "Update", class: primary_button_class, role: "button" %>	
	<% end %>
<% end %>
