<%= render partial: "form", locals: { 
                              url: admin_venue_path(@venue), 
                              method: :patch } %>

<br/>

<%= link_to "Back", admin_venues_path,
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Details", admin_venue_path(@venue),
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Destroy", admin_venue_path(@venue),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: danger_button_class,
                  role: "button" %>
