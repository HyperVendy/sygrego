<tr valign="top" class="<%= group_display_class(event_detail.group) %>">
	<td> 
		<%= h(event_detail.group.abbr) %>
	</td>

	<td> 
        <%= event_detail.group.short_name %>
	</td>
	
	<td> 
		<% if event_detail.food_cert.attached? %>
			<% if event_detail.food_cert.representable? %>
				<%= link_to(image_tag(event_detail.food_cert.representation(resize_to_limit: [80, 100])), rails_blob_path(event_detail.food_cert, disposition: "attachment")) %>
			<% else %>
				<%= link_to "File", rails_blob_path(event_detail.food_cert, disposition: "attachment") %>
			<% end %>
		<% else %>
			&nbsp;
		<% end %>
	</td>
	
	<td> 
		<% if event_detail.covid_plan.attached? %>
			<% if event_detail.covid_plan.representable? %>
				<%= link_to(image_tag(event_detail.covid_plan.representation(resize_to_limit: [80, 100])), rails_blob_path(event_detail.covid_plan, disposition: "attachment")) %>
			<% else %>
				<%= link_to "File", rails_blob_path(event_detail.covid_plan, disposition: "attachment") %>
			<% end %>
		<% else %>
			&nbsp;
		<% end %>
	</td>
	
	<td> 
		<% if event_detail.insurance.attached? %>
			<% if event_detail.insurance.representable? %>
				<%= link_to(image_tag(event_detail.insurance.representation(resize_to_limit: [80, 100])), rails_blob_path(event_detail.insurance, disposition: "attachment")) %>
			<% else %>
				<%= link_to "File", rails_blob_path(event_detail.insurance, disposition: "attachment") %>
			<% end %>
		<% else %>
			&nbsp;
		<% end %>
	</td>
</tr>
