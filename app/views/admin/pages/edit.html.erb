<% title "Editing page: #{@page.name}" %>

<h1><%= yield(:title) %></h1>

<%= render partial: "form", locals: { 
                              url: admin_page_path(@page), 
                              method: :patch } %>

<br/>

<%= link_to "Back", admin_pages_path,
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Details", admin_page_path(@page),
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Destroy", admin_page_path(@page),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: danger_button_class,
                  role: "button" %>
