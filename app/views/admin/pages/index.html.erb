<% title "Listing pages" %>

<h1><%= yield(:title) %></h1>

<ul>
  <% @pages.each do |page| %>
    <li>
        <%= link_to page.name, edit_admin_page_path(page) %>
    </li>
  <% end %>
</ul>

<%= link_to "New page", new_admin_page_path,
                  class: primary_button_class,
                  role: "button" %>
