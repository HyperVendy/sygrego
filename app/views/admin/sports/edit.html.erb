<% title "Editing #{@sport.name}" %>

<h1><%= yield(:title) %></h1>

<%= render partial: "form", locals: { 
                              url: admin_sport_path(@sport), 
                              method: :patch } %>

<br/>

<%= link_to "Back", admin_sports_path,
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Details", admin_sport_path(@sport),
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Destroy", admin_sport_path(@sport),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: danger_button_class,
                  role: "button" %>
