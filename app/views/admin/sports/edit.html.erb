<% title "Editing #{@sport.name}" %>

<h1><%= yield(:title) %></h1>

<%= render partial: "form", locals: { 
                              url: admin_sport_path(@sport), 
                              method: :put } %>

<%= link_to "Back", admin_sports_path,
                  class: "btn btn-primary btn-sm" %>
<%= link_to "Destroy", admin_sport_path(@sport),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: "btn btn-primary btn-sm" %>
