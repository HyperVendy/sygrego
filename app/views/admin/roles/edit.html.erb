<% title "Editing role: #{@role.name}" %>

<h1><%= yield(:title) %></h1>

<%= render partial: "form", locals: { 
                              url: admin_role_path(@role), 
                              method: :put } %>

<br/>

<%= link_to "Back", admin_roles_path,
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Details", admin_role_path(@role),
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Destroy", admin_role_path(@role),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: danger_button_class,
                  role: "button" %>
