<% title "Editing #{@group.name}" %>

<h1><%= yield(:title) %></h1>

<%= render partial: "form", locals: { 
                              url: admin_group_path(@group), 
                              method: :patch } %>

<br/>

<%= link_to "Back", admin_groups_path,
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Details", admin_group_path(@group),
                  class: primary_button_class,
                  role: "button" %>
<%= link_to "Destroy", admin_group_path(@group),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: danger_button_class,
                  role: "button" %>
