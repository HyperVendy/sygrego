<%- headings = %w{RowID Group FirstName Surname Coming Status Age   
	              Gender Type Friday Saturday Sunday Monday Address 
				  Suburb Postcode Phone Mobile 
	              Email Medicare MedicalInfo Medications YearsAttended
				  Spectator Onsite Helper GC SC Guest Driver NumberPlate
				  EarlyBird DietaryRqmts EmergContact EmergRel EmergPhone 
				  WWCC Voucher Allergies EmergEmail CampPrefs SportNotes } -%>
<%= headings.join(',') %>
<%= CSV.generate do |csv|
  @participants.each do |participant|
  	line = [ participant.database_rowid,
  		     participant.group.abbr,
  		     participant.first_name,
			 participant.surname,
  		     participant.coming,
  		     participant.status,
  		     participant.age,
  		     participant.gender,
  		     participant.rego_type,
			 participant.coming_friday,
			 participant.coming_saturday,
			 participant.coming_sunday,
			 participant.coming_monday,
  		     participant.address,
  		     participant.suburb,
  		     participant.postcode,
  		     participant.phone_number,
  		     participant.mobile_phone_number,
  		     participant.email,
  		     participant.medicare_number,
			 participant.medical_info,
			 participant.medications,
			 participant.years_attended,
			 participant.spectator,
			 participant.onsite,
			 participant.helper,
			 participant.group_coord,
			 participant.sport_coord,
			 participant.guest,
			 participant.driver,
			 participant.number_plate,
			 participant.early_bird,
			 participant.dietary_requirements,
			 participant.emergency_contact,
			 participant.emergency_relationship,
			 participant.emergency_phone_number,
			 participant.wwcc_number,
			 participant.voucher_code,
			 participant.allergies,
			 participant.emergency_email,
			 participant.camping_preferences,
			 participant.sport_notes
		   ]
    csv << line
  end
end.html_safe %>
