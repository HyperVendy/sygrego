<%- headings = %w{SYGid Group FirstName Surname Age Gender Type 
				  Friday Saturday Sunday Monday Email BackupEmail
				  Spectator Onsite Helper Driver NumberPlate
				  WWCC } -%>
<%= headings.join(',') %>
<%= CSV.generate do |csv|
  @participants.each do |participant|
  	line = [ participant.id,
			 participant.group.abbr,
  		     participant.first_name,
			 participant.surname,
  		     participant.age,
  		     participant.gender,
  		     participant.rego_type,
			 participant.coming_friday,
			 participant.coming_saturday,
			 participant.coming_sunday,
			 participant.coming_monday,
  		     participant.ticket_email,
			 participant.gc_email,
			 participant.spectator,
			 participant.onsite,
			 participant.helper,
			 participant.driver,
			 participant.number_plate,
			 participant.wwcc_number
		   ]
    csv << line
  end
end.html_safe %>
