<%- headings = %w{FirstName Surname Coming Age   
	              Gender Type Friday Saturday Sunday Monday Mobile 
				  Spectator Onsite WWCC  } -%>
<%= headings.join(',') %>
<%= CSV.generate do |csv|
  @participants.each do |participant|
  	line = [ participant.first_name,
			 participant.surname,
  		     participant.coming,
  		     participant.age,
  		     participant.gender,
  		     participant.rego_type,
			 participant.coming_friday,
			 participant.coming_saturday,
			 participant.coming_sunday,
			 participant.coming_monday,
  		     participant.mobile_phone_number,
  		     participant.spectator,
			 participant.onsite,
			 participant.wwcc_number
		   ]
    csv << line
  end
end.html_safe %>
