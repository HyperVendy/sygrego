<%= simple_form_for(@award, url: url, html: { method: method }) do |f| %> 
	<%= f.error_notification %>

	<%= f.input :name, label: 'Name of person(s) or group nominated' %>
	<%= f.input :flagged %>
	<%= f.input :submitted_by %>
	<%= f.input :submitted_group, label: 'Group of submitter' %>
	<%= f.input :description, label: 'Reason for nomination' %>

	<br/>

	<%= f.input :category, label: 'Re-categorise', collection: Award::CATEGORY, include_blank: false %>

	<br/>

	<%= f.button :submit, 'Nominate' %>
<% end %>	
