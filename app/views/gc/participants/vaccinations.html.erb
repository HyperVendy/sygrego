<% title "Vaccination status" %>

<h1><%= yield(:title) %></h1>
    
<% if !@participants.empty? %>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Name</th>
                <th>Vaccinated</th>
                <th>Document</th>
            </tr>
        </thead>

        <%= render partial: 'participant_vaccination', collection: @participants, as: :participant %>
    </table>
<% end %>

<%= legend_box [{:name => "Sports Participant", :class => "table-primary"},
					{:name => "Spectator", :class => "table-warning"},
					{:name => "Not Coming", :class => "table-dark"}] %>
