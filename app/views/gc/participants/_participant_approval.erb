<tr valign="top" class="<%= participant_display_class(participant) %>">
	<td> 
		<%= link_to participant.surname, edit_gc_participant_path(participant) %>
	</td>

	<td> 
        <%= link_to participant.first_name, edit_gc_participant_path(participant) %>
	</td>
	
	<td> 
		<%= participant.category %>
	</td>
	
	<td>
		<%= link_to "Accept", accept_gc_participant_path(participant),
			method: :patch,
			class: primary_button_class,
			role: "button" %>
		<%= link_to "Reject", reject_gc_participant_path(participant),
			method: :patch,
			class: danger_button_class,
			role: "button" %>
		<%= link_to "X", gc_participant_path(participant),
			method: :delete,
			data: { confirm: "Are you sure?" },
			class: danger_button_class,
			role: "button" %>
	</td>
</tr>
