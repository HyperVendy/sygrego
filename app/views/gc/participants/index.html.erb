<% title "Listing participants" %>

<h1><%= yield(:title) %></h1>

<%= search_box search_gc_participants_path, "Search" %>
<%= yield(:search_box)%>
<%= will_paginate @participants, :container => false %>

<br/>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Days</th>
      <th>Cost</th>
      <th>Actions</th>
    </tr>
  </thead>

	<%= render @participants %>
</table>

<%= will_paginate @participants, :container => false %>

<% if registrations_open %>
  <%= link_to "New participant", new_gc_participant_path,
                    class: primary_button_class,
                    role: "button" %>
<% end %>
<%= link_to "Download", gc_participants_path(format: :csv),
                  class: primary_button_class,
                  role: "button" %>
<% if registrations_open %>
  <%= link_to "Upload", new_import_gc_participants_path,
                    class: primary_button_class,
                    role: "button" %>
<% end %>

<%= legend_box [{:name => "Sports Participant", :class => "table-primary"},
					{:name => "Spectator", :class => "table-warning"},
					{:name => "Not Coming", :class => "table-dark"}] %>
